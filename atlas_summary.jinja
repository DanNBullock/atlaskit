<!doctype html>
<html lang="en">

<head>
<STYLE TYPE="text/css">
BODY {
  font-family    : arial, sans-serif;
}
td, th {
  padding: 0 10px;
  text-align: left;
}
</STYLE>
</head>

<body>

<h1 style="background-color:#E0E0FF">Labeling Similarity Report</h1>


<div>
    <h3> Observer Similarity Figures </h3>
    <table>
        <tr>
            <td><a href="intra_report.html">Within-Observer</a></td>
            <td><a href="inter_report.html">Between-Observer</a></td>
        </tr>
    </table>
</div>

<div>
    <h3>Maximum Probability Projections</h3>
    <img src="{{ mpp_fname }}">
</div>

<div>

    {% for obs_stats in stats %}

        <h3> Within Observer {{ loop.index0 }}</h3>
        <table>

            <tr>
                <td><b>Label Name</b></td>
                <td><b>Label #</b></td></td>
                <td><b>Mean Dice</b></td>
                <td><b>Mean Hausdorff (mm)</b></td>
                <td><b>Unfinished Templates</b></td>
            </tr>

            {% for label_stats in obs_stats %}
                <tr>
                    <td>{{ label_stats.label_name }}</td>
                    <td>{{ label_stats.label_no }}</td>
                    <td>{{ label_stats.intra_dice_mean }}</td>
                    <td>{{ label_stats.intra_haus_mean }}</td>
                    <td>{{ label_stats.unfinished }}</td>
                </tr>
            {% endfor %}

        </table>

    {% endfor %}

</div>

</body>

<footer>
    <p>Report generated by atlas_report.py on {{ report_time }}</p>
</footer>

</html>